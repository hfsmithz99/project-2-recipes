<%- include('../partials/header') %>

<h1>All Recipes</h1>

<table id="list">
    <thead>
        <tr>
            <th>Title</th>
            <th>Image</th>
            <th>Creator</th>
        </tr>
    </thead>
    <tbody>
        <% recipeDocs.forEach(function(r){ %>
            <tr>
                <td> <%= r.title %> </td>
                <td id="imagetable"><img src="<%= r.imagelink %>" width="150x"></td>
                <td><%= r.creator %></td>
                <td><a href="/recipes/<%=r._id%>">Details</a></td>
            </tr>
    <% }) %>
    </tbody>
</table>
<%- include('../partials/footer') %>